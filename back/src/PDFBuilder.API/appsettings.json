{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Database": {
    "ConnectionString": "Host=localhost;Port=5432;Database=pdfbuilder;Username=postgres;Password=admin1234",
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": false,
    "CommandTimeoutSeconds": 30,
    "MaxRetryCount": 3,
    "MaxRetryDelaySeconds": 30,
    "RunMigrationsOnStartup": false
  },

  "QuestPdf": {
    "LicenseType": "Community",
    "LicenseKey": null,
    "DefaultPageSize": "A4",
    "DefaultPageMargin": 50.0,
    "DefaultFontFamily": "Helvetica",
    "DefaultFontSize": 12.0,
    "EnableDebugging": false,
    "MaxDocumentSizeBytes": 52428800,
    "ImageCompressionQuality": 90
  },

  "Storage": {
    "BasePath": "./storage",
    "PdfOutputPath": "./storage/pdfs",
    "ImageUploadPath": "./storage/images",
    "FontsPath": "./storage/fonts",
    "MaxUploadSizeBytes": 10485760,
    "AllowedImageExtensions": [".jpg", ".jpeg", ".png", ".gif", ".bmp", ".webp", ".svg"],
    "AutoCleanupTempFiles": true,
    "PdfRetentionHours": 24
  },

  "ImageProcessing": {
    "MaxImageSizeBytes": 10485760,
    "MaxImageWidth": 4096,
    "MaxImageHeight": 4096,
    "AutoResizeEnabled": true,
    "DefaultCompressionQuality": 85,
    "HttpTimeoutSeconds": 30,
    "CacheDurationMinutes": 30,
    "AllowLocalFiles": true,
    "AllowInsecureHttp": false,
    "BaseFilePath": null,
    "AllowedHosts": []
  },

  "Expression": {
    "TimeoutMilliseconds": 5000,
    "MaxComplexity": 100,
    "EnableCaching": true,
    "MaxCacheSize": 1000,
    "CacheExpirationMinutes": 60,
    "AllowMethodCalls": true,
    "AllowCustomFunctions": true,
    "BlockedNamespaces": ["System.IO", "System.Net", "System.Reflection", "System.Runtime", "System.Diagnostics.Process"]
  },

  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:5173", "http://localhost:4200"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
    "AllowedHeaders": ["Content-Type", "Authorization", "X-Requested-With", "X-Correlation-Id", "X-SignalR-User-Agent"],
    "ExposedHeaders": ["Content-Disposition", "X-Correlation-Id", "X-Operation-Id"],
    "AllowCredentials": true,
    "PreflightMaxAgeSeconds": 600,
    "EnableSignalR": true
  },

  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/pdfbuilder-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "PDFBuilder.API"
    }
  }
}
